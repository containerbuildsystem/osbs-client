{
  "client_version": "{{VERSION}}",
  "prebuild_plugins": [
    {
      "name": "add_filesystem",
      "args": {
        "koji_hub": "{{KOJI_HUB}}",
        "repos": []
      }
    },
    {
      "name": "pull_base_image",
      "args": {
        "parent_registry": "{{REGISTRY_URI}}",
        "parent_registry_insecure": true
      }
    },
    {
      "name": "bump_release",
      "args": {
        "hub": "{{KOJI_HUB}}"
      }
    },
    {
      "name": "add_labels_in_dockerfile",
      "args": {
        "labels": "{{IMPLICIT_LABELS}}"
      }
    },
    {
      "name": "koji_parent",
      "required": false,
      "args": {
        "koji_hub": "{{KOJI_HUB}}"
      }
    },
    {
      "name": "reactor_config",
      "args": {
        "config_path": "{{CONFIG_PATH}}"
      }
    }
  ],
  "buildstep_plugins": [
    {
      "name": "orchestrate_build",
      "args": {
        "platforms": "{{PLATFORMS}}",
        "build_kwargs": "{{BUILD_KWARGS}}",
        "osbs_client_config": "{{OSBS_CLIENT_CONFIG}}"
      }
    }
  ],
  "postbuild_plugins": [
    {
      "name": "fetch_worker_metadata",
      "args": {
      }
    }
  ],
  "prepublish_plugins": [],
  "exit_plugins": [
    {
      "name": "delete_from_registry",
      "args": {
        "registries": {}
      }
    },
    {
      "name": "koji_import",
      "args": {
        "kojihub": "{{KOJI_HUB}}",
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false,
        "koji_keytab": false
      }
    },
    {
      "name": "koji_tag_build",
      "args": {
        "kojihub": "{{KOJI_HUB}}",
        "koji_keytab": false,
        "koji_principal": false
      }
    },
    {
      "name": "store_metadata_in_osv3",
      "args": {
        "url": "{{OPENSHIFT_URI}}",
        "verify_ssl": false
      }
    },
    {
      "name": "sendmail",
      "args": {
          "smtp_host": "{{SMTP_HOST}}",
          "from_address": "{{SMTP_FROM}}"
      }
    },
    {
      "name": "remove_built_image"
    }
  ]
}
