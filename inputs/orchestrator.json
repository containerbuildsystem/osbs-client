{
  "apiVersion": "build.openshift.io/v1",
  "kind": "BuildConfig",
  "metadata": {
    "name": "{{NAME}}",
    "labels": {}
  },
  "spec": {
    "source": {
      "type": "Git",
      "git": {
        "uri": "{{GIT_URI}}",
        "ref": "{{GIT_REF}}"
      }
    },
    "output": {
      "to": {
        "kind": "DockerImage",
        "name": "{{REGISTRY_URI}}/{{OUTPUT_IMAGE_TAG}}"
      }
    },
    "strategy": {
      "type": "Custom",
      "customStrategy": {
        "from": {
          "kind": "DockerImage",
          "name": "{{BUILD_IMAGE}}"
        },
        "exposeDockerSocket": true,
        "env": [],
        "secrets": []
      }
    }
  }
}
